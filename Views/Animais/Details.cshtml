@model ClinicaVeterinaria.Models.Animal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Raca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Raca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Peso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Peso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacoesMedicas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservacoesMedicas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FotoUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tutor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tutor.Nome)
        </dd>
    </dl>
</div>
<hr />
<h3>🩺 Prontuário Médico (Histórico)</h3>

@if (Model.Consultas != null && Model.Consultas.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Data</th>
                <th>Motivo</th>
                <th>Diagnóstico</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consulta in Model.Consultas.OrderByDescending(c => c.DataHora))
            {
                <tr>
                    <td>@consulta.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@consulta.Motivo</td>
                    <td>
                        @if (!string.IsNullOrEmpty(consulta.Diagnostico))
                        {
                            <span class="text-primary">@consulta.Diagnostico</span>
                        }
                        else
                        {
                            <span class="text-muted"><i>Sem diagnóstico</i></span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Este animal ainda não possui histórico de consultas.
    </div>
}
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
